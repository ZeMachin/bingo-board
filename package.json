{
  "name": "bingo-board",
  "version": "1.0.6",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "config": "ts-node src/environments/set-env.ts",
    "build-pages": "ng build --base-href https://zemachin.github.io/bingo-board/",
    "deploy-pages": "npx angular-cli-ghpages --dir=dist/bingo-board",
    "deploy": "ng deploy --base-href=/bingo-board/",
    "serve:ssr:bingo-board": "node dist/bingo-board/server/server.mjs"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.7.0",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/platform-server": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@angular/ssr": "^21.0.4",
    "colors": "^1.4.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "google-auth-library": "^10.5.0",
    "google-spreadsheet": "^5.0.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.4",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.0",
    "@types/express": "^5.0.1",
    "@types/node": "^20.17.19",
    "angular-cli-ghpages": "^3.0.2",
    "jsdom": "^27.1.0",
    "less": "^4.2.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
